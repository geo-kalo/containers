FROM	ubuntu
run 	apt update -y && apt install -y net-tools && apt install -y iputils-ping && apt install -y iproute2 tcpdump iptables ulogd2
#run     echo 'nameserver 8.8.8.8' >> /etc/resolv.conf
copy 	resolv.conf /
copy	ulogd.conf  /etc/ulogd.conf
run     touch /var/log/ulog/firewall
copy    iptables-rules /
copy 	entrypoint.sh /
copy    listener.py /
run 	chmod u+x /entrypoint.sh
entrypoint  /entrypoint.sh
