FROM	ubuntu
run 	apt update -y && apt install -y net-tools && apt install -y iputils-ping && apt install -y iproute2 tcpdump iptables
#run     echo 'nameserver 8.8.8.8' >> /etc/resolv.conf
copy 	resolv.conf /
copy    iptables-rules /
copy 	entrypoint.sh /
run 	chmod u+x /entrypoint.sh
entrypoint  /entrypoint.sh
